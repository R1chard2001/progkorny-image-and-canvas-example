<Window x:Class="progkorny_image_and_canvas_example.ImageViewerExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:progkorny_image_and_canvas_example"
        mc:Ignorable="d"
        Title="ImageViewerExample" Height="450" Width="800">
    <Grid>
        <Image x:Name="Image" Margin="10,50,10,10"/>
        <Button x:Name="SelectImageButton" Content="Select image" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="24" Width="105" Click="SelectImageButton_Click"/>
        <Label x:Name="ImagePathLabel" Content="None selected" Margin="120,10,10,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
